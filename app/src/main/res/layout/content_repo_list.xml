<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_repo_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.cse390.githubhotness.ui.activity.RepoListActivity"
    tools:showIn="@layout/activity_repo_list">

    <android.support.design.widget.TabLayout
            android:id="@+id/repos_tab_layout"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabBackground="@color/colorPrimary"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/colorTextIcons"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorHeight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
            android:id="@+id/repos_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


</LinearLayout>
