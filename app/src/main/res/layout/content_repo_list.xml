<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_repo_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.cse390.githubhotness.RepoListActivity"
    tools:showIn="@layout/activity_repo_list">

  <android.support.v7.widget.RecyclerView
      android:id="@+id/repos"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <TextView
      android:id="@+id/repos_empty"
      android:gravity="center"
      android:text="@string/empty"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <TextView
      android:id="@+id/repos_error"
      android:text="@string/error"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <android.support.v4.widget.ContentLoadingProgressBar
      android:id="@+id/repos_loading"
      style="?android:attr/progressBarStyleLarge"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</RelativeLayout>
